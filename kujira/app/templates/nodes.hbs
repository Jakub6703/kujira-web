<h2>Nodes</h2>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Managed</th>
      <th>Last Contact</th>
      <th>Boot Time</th>
      <th>Ceph Version</th>
    </tr>
  </thead>
  <tbody>
      {{#each model as |server|}}
          <tr>
            <td>
                {{#link-to "node" server.hostname}}{{server.hostname}}{{/link-to}}
            </td>
            <td> {{server.managed}} </td>
            <td> {{server.lastContact}} </td>
            <td> {{server.bootTime}} </td>
            <td> {{server.cephVersion}} </td>
          </tr>
      {{/each}}
  </tbody>
</table>
